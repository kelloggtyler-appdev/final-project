<!-- Validation failure messages -->
<% if @shift.errors.any? %>
  <% @shift.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit shift #<%= @shift.id %>
</h1>

<hr>

<form action="/update_shift/<%= @shift.id %>" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <%= select_tag("user_id", options_from_collection_for_select(User.where(active_status: true), :id, :last_name, @shift.try(:user_id)), :class => "form-control") %>
  </div>

  <!-- Label and input for service_id -->
  <div class="form-group">
    <label for="service_id">
      Service
    </label>

    <%= select_tag("service_id", options_from_collection_for_select(Service.all, :id, :name, @shfit.try(:service_id)), :class => "form-control") %>
  </div>

  <!-- Label and input for date -->
  <div class="form-group">
    <label for="date">
      Date
    </label>

    <input type="text" data-provide='datepicker' id="date" name="date" class="form-control" value="<%= @shift.date %>">
  </div>

  <!-- Label and input for night -->
  <div class="form-check">
    <input type="hidden" value="0" name="night">
    <input id="night" class="form-check-input" name="night" type="checkbox" value="1" <%= "checked" if @shift.night %>>

    <label for="night" class="form-check-label">
      Night
    </label>
  </div>
<dd>
  
</dd>
  <button class="btn btn-block btn-primary">
    Update shift
  </button>
</form>

<hr>

<a href="/shifts">
  Go back
</a>
